<form action="<%= search_professors_url %>" method="GET" class="professor_search">
  <label for="match">Professor Search</label>
	
	<div class="professor_search group">
	  <input type="search" id="match" name="match" placeholder="Search by name, college, or department">
	  <button>Go!</button>
	</div>
</form>

<section class="professors_list">
  <p>
    Can't find your professor?
    <a href="<%= new_professor_url %>">Add a new one!</a>
  </p>

  <h1><%= @header_text %></h1>
	
  <ul>
    <% if @professors.length > 0 %>
      <% @professors.each do |professor| %>
        <li class="professor">
          <a href="<%= professor_url(professor) %>">
            <h3><%= professor.name %></h3>
            <p> <%= professor.department %> Department at
              <%= professor.college.name %></p>
          </a>
        </li>
      <% end %>
    <% else %>
      <li class="no_professors">No professors to show :(</li>
    <% end %>
  </ul>
	
</section>
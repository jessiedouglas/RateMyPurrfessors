<section class="college_info">
  <h1><%= @college.name %></h1>
  <p><%= @college.location %></p>
	<%= link_to "Rate This College", new_college_college_rating_url(@college) %>
</section>

<section class="professor_sidebar">
  <h3>Professors at <%= @college.name %></h3>
  <ul class="professors_list">
		<% if @professors %>
	  	<% @professors.each do |professor| %>
		  	<li><a href="<%= professor_url(professor) %>">
					<h4><%= professor.name %></h4>
					<p><%= professor.department %> Department</p>
				</a></li>
			<% end %>
		<% else %>
			<li>There are no professors for this college :(</li>
		<% end %>
  </ul>
</section>

<% if @ratings.length > 0 %>
	<section class="averages">
		<%= render "college_ratings/averages", ratings: @ratings, college: @college %>
	</section>
<% end %>

<section class="ratings">
  <h1>Ratings</h1>
	<ul>
		<% if @ratings.length > 0 %>
			<% @ratings.each do |rating| %>
				<li>
					<%= render "college_ratings/show", rating: rating %>
				</li>
			<% end %>
		<% else %>
			<li>There are no ratings at this time :(</li>
		<% end %>
	</ul>
  <%= link_to "Rate This College", new_college_college_rating_url(@college) %>
</section>
<h1>Edit my info</h1>

<form class="user_edit">
  <label for="user_name">Name</label>
  <input type="text"
      id="user_name"
      name="user[name]"
      value="<%= user.get("name") %>">

	<% disabled = (user.get("email") === "demo@demo.com") ? "disabled" : "" %>
  <label for="user_email">
		Email
		<% if (disabled) { %>
			<span class="optional">Disabled for demo user</span>
		<% } %>
	</label>
  <input type="email"
      id="user_email"
      name="user[email]"
			<%= disabled %>
      value="<%= user.get("email") %>">


  <label for="user_college_id">College <span class="optional">(optional)</span></label>
  <select name="user[college_id]" id="user_college_id">
    <option value="">--Select--</option>
    <% colleges.each( function (college) { %>
      <% selected = user.get("college_id") === college.get("id") ? "selected" : "" %>
      <option value="<%= college.get("id") %>" <%= selected %>>
        <%= college.escape("name") %></option>
    <% }); %>
  </select>

	<a href="" class="password_change">Change Password</a>
 
  <a href="" class="update_user">Save</a>
	
	<a href="" class="cancel_update">Cancel</a>
</form>
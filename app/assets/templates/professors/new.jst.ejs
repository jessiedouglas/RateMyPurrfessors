<h1>Add New Professor</h1>

<form>
  <label for="professor_first_name">First Name</label>
  <input type="text" 
  		name="first_name" 
  		id="professor_first_name"
  		value="<%= professor.escape("first_name") %>">

  <label for="professor_middle_initial">Middle Initial</label>
  <input type="text" 
  		name="middle_initial" 
  		id="professor_middle_initial"
  		size="1"
  		value="<%= professor.escape("middle_initial") %>">

  <label for="professor_last_name">Last Name</label>
  <input type="text" 
  		name="last_name" 
  		id="professor_last_name"
  		value="<%= professor.escape("last_name") %>">

  <label for="professor_department">Department</label>
  <select name="department" id="professor_department">
    <option value="">--Select--</option>
    <% departments.forEach( function (department) { %>
      <% selected = professor.get("department") == department ? "selected" : "" %>
      <option value="<%= department %>" <%= selected %>>
        <%= department %></option>
    <% }); %>
  </select>

  <label for="professor_college_id">College</label>
  <select name="college_id" id="professor_college_id">
    <option value="">--Select--</option>
    <% colleges.each( function (college) { %>
      <% selected = professor.get("college_id") == college.get("id") ? "selected" : "" %>
      <option value="<%= college.get("id") %>" <%= selected %>>
        <%= college.escape("name") %></option>
    <% }); %>
  </select>
	
	<div class="filepicker">
		<a href="" id="photo">Upload a Photo</a>
	</div>
	<!-- <input type="filepicker-dragdrop" id="constructed-widget" name="professor[filepicker_url]"> -->

  <button class="add_professor">Add Professor</button>
</form>
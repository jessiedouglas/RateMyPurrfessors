<div class="filler_small"></div>

<form class="professor_search group">
  <label for="match">Professor Search</label>
  <input type="search" id="match" name="match" placeholder="Search by name, college, or department">
</form>

<section class="professors_list">
  
  <h1>All Professors</h1>
	
  <p>
    Can't find your professor?
    <a href="#/professors/new">Add a new one!</a>
  </p>

	<div class="paginate group">
	</div>
	
	<article class="professors_list">
	  <ul>
	    <% if (professors.length > 0) { %>
	      <% professors.each(function (professor) { %>
	        <li class="professor">
	          <a href="#/professors/<%= professor.get("id") %>">
	            <h3><%= professor.escape("name") %></h3>
	            <p> <%= professor.escape("department") %> Department at
	              <%= professor.get("college").name %></p>
	          </a>
	        </li>
	      <% }); %>
	    <% } else { %>
	      <li class="no_professors">No professors to show :(</li>
	    <% } %>
	  </ul>
	</article>
	
	<div class="paginate group">
	</div>
</section>

<div class="filler_small"></div>